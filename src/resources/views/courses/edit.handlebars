<div class="mt-4">
  <h3>Edit course</h3>

  <form method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Name</label>
      <input value='{{course.name}}'type="text" name="name" class="form-control" id="name" />
    </div>
    <div class="form-group mt-2">
      <label for="description">Description</label>
      <input
        value='{{course.description}}'type="text"
        name="description"
        class="form-control"
        id="description"
      />
    </div>
    <div class="form-group mt-2">
      <label for="videoId">Video Id</label>
      <input value='{{course.videoId}}'type="text" name="videoId" class="form-control" id="videoId" />
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
  </form>
</div>